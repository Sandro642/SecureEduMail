{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:3001",
    "distDir": "../build"
  },
  "package": {
    "productName": "SecureEduMail",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "icon": [
        "icons/32x32.png",
        "icons/64x64.png",
        "icons/icon.ico"
      ],
      "identifier": "xyz.secureedu.mail",
      "macOS": {
        "signingIdentity": null,
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null
      },
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "SecureEduMail",
        "width": 1400
      }
    ]
  }
}
